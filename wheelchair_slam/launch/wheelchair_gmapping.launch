<launch>
 <arg name="set_base_frame" default="base_footprint"/>
 <arg name="set_odom_frame" default="odom"/>
 <arg name="set_map_frame" default="map"/>
 <arg name="scan_topic" default="scan_filtered"/>

  <!-- LiDAR FILTERING 
 <node pkg="laser_filters" type="scan_to_scan_filter_chain" name="laser_filter" output="screen">
    <rosparam command="load" file="$(find wheelchair_bringup)/config/scan_data_filter.yaml"/>
  </node>
 --> 

 
 <!-- GMAPPING --> 
 <node pkg="gmapping" type="slam_gmapping" name="wheelchair_slam_gmapping" output="screen">
   <remap from="scan" to="$(arg scan_topic)"/>   
   <param name="base_frame" value="$(arg set_base_frame)"/>
   <param name="odom_frame" value="$(arg set_odom_frame)"/>
   <param name="map_frame"  value="$(arg set_map_frame)"/>
   <rosparam command="load" file="$(find wheelchair_slam)/config/gmapping_params.yaml"/>
  </node>
</launch>
